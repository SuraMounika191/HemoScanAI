{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "jsx": "react-jsx",

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,

    "allowJs": true,
    "allowImportingTsExtensions": true,

    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": true
  }
}
